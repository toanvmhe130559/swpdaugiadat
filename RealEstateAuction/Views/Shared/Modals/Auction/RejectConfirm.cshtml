<div class="modal fade" id="modalRejectAuction" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <form action="approve-auction" method="get">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="fw-bold">Confirm</h2>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn thay đổi trang thái?</p>
                    <input type="hidden" id="idUpdate" name="auctionId" value="" />
                    <input type="hidden" id="statusUpdate" name="status" value="" />
                    <span>Lý do:</span>
                    <textarea name="reason" class="form-control" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </form>
    </div>
</div>

